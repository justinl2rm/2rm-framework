<header class="sticky" style="background-color:rgba(255,255,255,.9); z-index:10000">
	<div class="row no-gutters">
		<div class="col-auto">
			<a href="/"><img width="{{ siteControls.logoWidth }}" src="{% if siteControls.logo | length %}{{ siteControls.logo.one.url }}{% endif %}" alt="{{ siteName }}"></a>
		</div>
		<div class="col  mainnav" id="mobile-menu">
			<div class="nav-wrapper">
				<nav>
				{{ craft.navigation.render('mainNav', {
			      ulClass: 'd-none d-lg-flex nav',
			      activeClass: 'nav-active',

			    }) }}
				</nav>
				<span class="d-block d-md-none" id="navTrigger"><i class="fa fa-bars"></i></span>
			</div>
		</div>
	</div>
</header>

