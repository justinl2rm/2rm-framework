{% extends "_includes/body-block-open" %}
{% block content %}
	<div class="container">
		<div class="row">

				{% macro errorList(errors) %}
				{% if errors %}
				<ul class="errors col-12">
					{% for error in errors %}
					<li>{{ error }}</li>
					{% endfor %}
				</ul>
				{% endif %}
				{% endmacro %}

				{% from _self import errorList %}

			</div>

				<form method="post" class="main-form row" id="my-form" action="POST" accept-charset="UTF-8">
					{{ csrfInput() }}
					<input type="hidden" name="action" value="contactForm/sendMessage">

					<input id="subject" type="hidden" name="subject" value="{{ block.formEmailSubject }}">

					<input id="favoriteKitten" type="text" style="position:absolute; left:-9999px" name="favoriteKitten">


					{% for item in block.children %}
					{% include "_includes/neo/" ~ item.type  with {entry:item} %}
					{% endfor %}

				</form>
				<div id="thankYou">
					{{ block.thankYou }}
				</div>
			</div>
{% endblock %}